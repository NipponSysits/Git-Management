<script type="text/javascript">

    $.when(
        (function(){
            window.indexedDB = window.indexedDB || window.mozIndexedDB || window.webkitIndexedDB || window.msIndexedDB;
            window.origin = '<%= _HOST %>' || window.location.origin;

            var module = $.Deferred();
            if (localStorage == undefined) {
                module.reject(new CallbackException("<%= _LANG.EXCEPTION.LOCALSTORAGE_TITLE %>", "<%= _LANG.EXCEPTION.LOCALSTORAGE_DESC %>"));
            } else if (console == undefined) {
                module.reject(new CallbackException("<%= _LANG.EXCEPTION.CONSOLE_TITLE %>", "<%= _LANG.EXCEPTION.CONSOLE_DESC %>"));
            } else if (document.cookie == undefined) {
                module.reject(new CallbackException("<%= _LANG.EXCEPTION.COOKIE_TITLE %>", "<%= _LANG.EXCEPTION.COOKIE_DESC %>"));
            } else if (window.indexedDB == undefined) {
                module.reject(new CallbackException("<%= _LANG.EXCEPTION.INDEXED_TITLE %>", "<%= _LANG.EXCEPTION.INDEXED_DESC %>"));
            } else if (History == undefined) {
                module.reject(new CallbackException("<%= _LANG.EXCEPTION.HISTORY_TITLE %>", "<%= _LANG.EXCEPTION.HISTORY_DESC %>"));
            } else if (/MSIE 5.0|MSIE 5.5|MSIE 6.0|MSIE 7.0|MSIE 8.0/g.exec(navigator.userAgent)) {
                module.reject(new CallbackException("<%= _LANG.EXCEPTION.IE9_TITLE %>", "<%= _LANG.EXCEPTION.IE9_DESC %>"));
            } else {
                module.resolve(true); 
            }
            return module.promise();
        })()
    ).fail(function (ex) {
        if (ex instanceof CallbackException) {
            alert(ex.exMessage);
        } else {
            alert(ex);
        }
    }).done(function (data) {
        console.log('done.');
    });



$(function(){
  var resizeImageLogin = function(){
    $('.login-image').height($(window).height() - 136);
  }
  resizeImageLogin();
  $(window).resize(resizeImageLogin);
  $('.ui.menu .ui.dropdown').dropdown({ on: 'hover' });
  $('.ui.menu a.item').on('click', function() {
      $(this).addClass('active').siblings().removeClass('active');
  });
  $('.ui.checkbox').checkbox()

  $('.ui.form').form({
    fields: {
      email: {
        identifier  : 'email',
        rules: [
          { type   : 'empty', prompt : 'Please enter your e-mail' },
          { type   : 'email', prompt : 'Please enter a valid e-mail' }
        ]
      },
      password: {
        identifier  : 'password',
        rules: [
          { type   : 'empty', prompt : 'Please enter your password' },
          { type   : 'length[6]', prompt : 'Your password must be at least 6 characters' }
        ]
      }
    }
  });
});
</script>
